<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="dateFormat" class="java.text.SimpleDateFormat">
        <constructor-arg value="yyyy-MM-dd"/>
    </bean>

    <bean class="com.crm.entity.account.Account" id="accountAdmin">
        <property name="login" value="admin"/>
        <property name="password" value="admin"/>
        <property name="rightType" value="ADMIN"/>
        <property name="lockType" value="UNLOCKED"/>
        <property name="email" value="imrahill120@gmail.com"/>

        <property name="registrationDate">
            <bean factory-bean="dateFormat" factory-method="parse">
                <constructor-arg value="2017-02-13"></constructor-arg>
            </bean>
        </property>
    </bean>

    <bean class="com.crm.entity.account.Account" id="accountManagerAlan">
        <property name="login" value="alan"/>
        <property name="password" value="alan"/>
        <property name="rightType" value="USER"/>
        <property name="lockType" value="UNLOCKED"/>
        <property name="email" value="alan.mcjoys@gmail.com"/>
        <property name="employee" ref="employeeAlan"/>

        <property name="registrationDate">
            <bean factory-bean="dateFormat" factory-method="parse">
                <constructor-arg value="2017-02-20"></constructor-arg>
            </bean>
        </property>
    </bean>

    <bean class="com.crm.entity.employee.Employee" id="employeeAlan">
        <property name="name" value="Alan"/>
        <property name="surname" value="McJoys"/>
        <property name="age" value="24"/>
        <property name="gender" value="MALE"/>
        <property name="position" value="MANAGER"/>
        <property name="email" value="alan.mcjoys@gmail.com"/>
        <property name="phone" value="+19358912"/>
    </bean>

    <bean class="com.crm.entity.courier.Courier" id="courierJane">
        <property name="name" value="Jane"/>
        <property name="surname" value="Lawsy"/>
        <property name="age" value="19"/>
        <property name="gender" value="FEMALE"/>
        <property name="position" value="COURIER"/>
        <property name="email" value="jane.lawsy@gmail.com"/>
        <property name="phone" value="+18917823"/>

        <property name="courierStatus" value="FREE"/>
    </bean>

    <bean class="com.crm.entity.account.Account" id="accountStorekeeperJake">
        <property name="login" value="jake"/>
        <property name="password" value="jake"/>
        <property name="email" value="jake.valentine@gmail.com"/>
        <property name="lockType" value="UNLOCKED"/>
        <property name="rightType" value="USER"/>
        <property name="registrationDate">
            <bean factory-bean="dateFormat" factory-method="parse">
                <constructor-arg value="2017-02-24"/>
            </bean>
        </property>

        <property name="employee" ref="storekeeperJake"/>
    </bean>

    <bean class="com.crm.entity.storekeeper.Storekeeper" id="storekeeperJake">
        <property name="name" value="Jake"/>
        <property name="surname" value="Valentine"/>
        <property name="age" value="23"/>
        <property name="gender" value="MALE"/>
        <property name="position" value="STOREKEEPER"/>
        <property name="email" value="jake.valentine@gmail.com"/>
        <property name="phone" value="+18724512"/>

    </bean>

    <bean class="com.crm.entity.client.Client" id="clientMary">
        <property name="name" value="Marry"/>
        <property name="surname" value="McDonnell"/>
        <property name="login" value="marry.mcdonnell"/>
        <property name="password" value="mary"/>
        <property name="email" value="mary.mcdonnell@gmail.com"/>
        <property name="phone" value="+15678913"/>
    </bean>

    <bean class="com.crm.entity.order.Order" id="orderMary">
        <property name="client" ref="clientMary"/>
        <property name="courier" ref="courierJane"/>
        <property name="address" value="Addison st, 12"/>
        <property name="orderStatus" value="READY"/>
    </bean>

    <bean class="com.crm.entity.good.Good" id="goodLaptopHP">
        <property name="nomination" value="HP-011"/>
        <property name="description" value="HP-011 DESC"/>
        <property name="amount" value="6"/>
        <property name="price" value="1000"/>
    </bean>

    <bean class="com.crm.entity.good.Good" id="goodLaptopAcer">
        <property name="nomination" value="ACER-011"/>
        <property name="description" value="ACER-011 DESC"/>
        <property name="amount" value="4"/>
        <property name="price" value="1200"/>
    </bean>

    <bean class="com.crm.entity.good.Good" id="goodLaptopAsus">
        <property name="nomination" value="ASUS-011"/>
        <property name="description" value="ASUS-011 DESC"/>
        <property name="amount" value="12"/>
        <property name="price" value="1500"/>
    </bean>
</beans>
