<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="dateFormat" class="java.text.SimpleDateFormat">
        <constructor-arg value="yyyy-MM-dd"/>
    </bean>

    <bean class="com.crm.database.entity.account.Account" id="accountAdmin">
        <property name="login" value="admin"/>
        <property name="password" value="adminadmin"/>
        <property name="rightType" value="ADMIN"/>
        <property name="lockType" value="UNLOCKED"/>
        <property name="employee" ref="employeeAdmin"/>

        <property name="registrationDate">
            <bean factory-bean="dateFormat" factory-method="parse">
                <constructor-arg value="2017-02-13"></constructor-arg>
            </bean>
        </property>
    </bean>

    <bean class="com.crm.database.entity.account.Account" id="accountManagerPeter">
        <property name="login" value="peter.glebsky"/>
        <property name="password" value="peter"/>
        <property name="rightType" value="USER"/>
        <property name="lockType" value="UNLOCKED"/>
        <property name="employee" ref="orderManagerPeter"/>

        <property name="registrationDate">
            <bean factory-bean="dateFormat" factory-method="parse">
                <constructor-arg value="2017-02-20"></constructor-arg>
            </bean>
        </property>
    </bean>

    <bean class="com.crm.database.entity.account.Account" id="accountStorekeeperDane">
        <property name="login" value="dane.thorson"/>
        <property name="password" value="dane"/>
        <property name="lockType" value="UNLOCKED"/>
        <property name="rightType" value="USER"/>
        <property name="employee" ref="storekeeperDane"/>

        <property name="registrationDate">
            <bean factory-bean="dateFormat" factory-method="parse">
                <constructor-arg value="2017-02-24"/>
            </bean>
        </property>
    </bean>

    <bean class="com.crm.database.entity.account.Account" id="accountCourierGaverel">
        <property name="login" value="gaverel.rocannon"/>
        <property name="password" value="gaverel"/>
        <property name="lockType" value="UNLOCKED"/>
        <property name="rightType" value="USER"/>
        <property name="employee" ref="courierGaverel"/>

        <property name="registrationDate">
            <bean factory-bean="dateFormat" factory-method="parse">
                <constructor-arg value="2017-02-26"/>
            </bean>
        </property>
    </bean>
</beans>